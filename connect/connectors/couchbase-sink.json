{
  "name": "couchbase-sink",
  "config": {
    "connector.class": "com.couchbase.connect.kafka.CouchbaseSinkConnector",
    "tasks.max": "1",

    "topics": "orders",

    "couchbase.seed.nodes": "couchbase",
    "couchbase.bucket": "order_analytics",
    "couchbase.username": "Administrator",
    "couchbase.password": "password",

    "couchbase.document.id": "/order_id",
    "couchbase.document.id.prefix": "order::",
    "couchbase.remove.document": "false",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",

    "couchbase.persist.to": "NONE",
    "couchbase.replicate.to": "NONE"
  }
}

